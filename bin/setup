#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -x

bundle install --jobs 4 --retry 3
bundle install --jobs 4 --retry 3 --gemfile=steep/Gemfile || echo "ğŸš¨ Failed to install Steep"

bundle exec rake compile

if type "re2c" > /dev/null 2>&1; then
  echo "ğŸ¤– Detected re2c"
else
  echo "ğŸš¨ Cannot find re2c, which is required to generate lexer. Install the tool to change the lexer."
fi
